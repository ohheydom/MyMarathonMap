- provide(:title, full_title("Edit User"))
%h2.center Edit Settings
%div.form-group
= form_for @user do |x|
  = render 'shared/error_messages'
  %table.table-centered
    %tr
      %td= x.label :username
      %td= x.text_field :username, class: "form-control"
    %tr
      %td= x.label :email
      %td= x.text_field :email, class: "form-control"
    %tr
      %td= x.label :current_password
      %td= x.password_field :current_password, class: "form-control"
    %tr
      %td= x.label :password
      %td= x.password_field :password, class: "form-control"
    %tr
      %td= x.label :password_confirmation, "Password Confirmation"
      %td= x.password_field :password_confirmation, class: "form-control"
    %tr
      %td
      %td.center= x.submit "Save Settings", class: 'btn btn-default'
