- provide(:title, full_title("Sign In"))
%div.row
  %div.col-md-6.col-md-offset-3
    %h3.center Sign In
    %div.form-group
      = form_tag sessions_path do
        %table.table-centered
          %tr
            %td= label_tag :email
            %td= text_field_tag :email, "", id: "sign_in_email", class: "form-control"
          %tr
            %td= label_tag :password
            %td= password_field_tag :password, "", id: "sign_in_password", class: "form-control"
          %tr
            %td
            %td.center= submit_tag "Sign In", id: 'sign_in_sign_in', class: 'btn btn-default'
    %br
    %h3.center
      Not a User,
      = link_to "Sign Up now!", signup_path
